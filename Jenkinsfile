pipeline {
    agent any

    stages() {
        stage("Code") {
            steps() {
                echo "Cloning the git repo codebase"
            }
        }

        stage("Test") {
            steps() {
                echo "Testing the codebase"
            }
        }

        stage("Build") {
            steps() {
                echo "Building the codebase"
            }
        }

        stage("Deploy") {
            steps() {
                echo "Deploying the codebase"
            }
        }
    }
}